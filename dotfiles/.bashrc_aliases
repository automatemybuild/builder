# enable color support of ls and also add handy aliases
alias ls='ls --color=none'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'
# some more ls aliases
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
# shortcuts for common commands
alias h='~/bin/icards.sh'
alias zz='~/bin/update.sh -s'
# git
alias gg='~/bin/git_update.sh'
alias gp='cd /opt/diskstation/common/builder; git add *; git commit -m `date '+%y%m%d'`; git push -u origin main'
# tmux
alias tt='tmux new-session -s UPDATE \; split-window -v'
